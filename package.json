{
  "name": "triple_tee",
  "version": "0.1.0",
  "description": "An accounting software built for sole proprietors.",
  "main": "main.js",
  "repository": "git@github.com-coffeebrewapps:coffeebrewapps/triple_tee-source.git",
  "author": "Coffee Brew Apps <coffeebrewapps@gmail.com>",
  "license": "MIT",
  "scripts": {
    "serve": "bin/serve",
    "client-dev": "vite client",
    "client-build": "vite build --emptyOutDir client",
    "client-preview": "vite preview client",
    "client-test:unit": "vitest client/__tests__ --config client/vitest.config.js",
    "client-test:unit-watch": "vitest client/__tests__ --config client/vitest.config.js --watch",
    "server-dev": "DEBUG=express:* PORT=4001 node dev/server.js",
    "server-build": "esbuild server/index.js server/modules/**/index.js --platform=node --bundle --minify --outdir=dist",
    "server-test:unit": "jest --randomize --config server/jest.config.js server/__tests__/*.test.js server/__tests__/**/*.test.js",
    "server-test:unit-watch": "jest --watch --randomize --config server/jest.config.js server/__tests__/*.test.js server/__tests__/**/*.test.js",
    "lib-build": "esbuild lib/src/*.js lib/src/**/*.js --platform=node --minify --format=esm --outdir=lib/dist",
    "lib-test:unit": "jest --randomize --config lib/jest.config.js lib/__tests__/*.test.js lib/__tests__/**/*.test.js",
    "lib-test:unit-watch": "jest --watch --randomize --config lib/jest.config.js lib/__tests__/*.test.js lib/__tests__/**/*.test.js",
    "build": "bin/build",
    "package": "electron-forge package",
    "make": "electron-forge make"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.1.1",
    "@electron-forge/maker-deb": "^6.1.1",
    "@electron-forge/maker-rpm": "^6.1.1",
    "@electron-forge/maker-squirrel": "^6.1.1",
    "@electron-forge/maker-zip": "^6.1.1",
    "create-vue": "^3.6.1",
    "electron": "^24.1.3",
    "esbuild": "^0.17.18",
    "eslint": "^8.41.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0 || ^16.0.0 ",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-vitest": "^0.2.6",
    "eslint-plugin-vue": "^9.14.1",
    "jest": "^29.5.0",
    "pinia": "^2.0.32",
    "supertest": "^6.3.3",
    "vue": "^3.2.47",
    "vue-router": "^4.1.6"
  },
  "dependencies": {
    "@vitejs/plugin-vue": "^4.0.0",
    "@vue/test-utils": "^2.3.0",
    "axios": "^1.4.0",
    "coffeebrew-vue-components": "https://github.com/coffeebrewapps/coffeebrew_vue_components.git#feature/v0.1.0",
    "cors": "^2.8.5",
    "electron-squirrel-startup": "^1.0.0",
    "express": "^4.18.2",
    "html2pdf.js": "^0.10.1",
    "jsdom": "^21.1.0",
    "liquidjs": "^10.7.1",
    "multer": "^1.4.5-lts.1",
    "puppeteer": "^20.3.0",
    "uuid": "^9.0.0",
    "vite": "^4.1.4",
    "vitest": "^0.29.1"
  }
}
